.message
  .upper-message
    %p.upper-message__user-name
      = message.user.name
    %p.upper-message__data
      = message.created_at.strftime('%Y/%m/%d %H:%M:%S')
  .lower-message
  - if message.body.present?
    %p.lower-message__data
      = message.body
  = image_tag message.image.url if message.image.present?
